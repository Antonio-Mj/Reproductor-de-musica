<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título de la sección -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuraciones"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/blue_text"
                android:layout_marginBottom="16dp"/>

            <!-- Reproducción automática -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/blue_text"
                    android:text="Reproducción automática"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_auto_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Repetición de la lista de reproducción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/blue_text"
                    android:text="Repetir lista de reproducción"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_repeat_playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Reproducción aleatoria -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/blue_text"
                    android:text="Reproducción aleatoria"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_shuffle_playback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Calidad de audio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/blue_text"
                    android:text="Calidad de audio"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinner_audio_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/audio_quality_options" />
            </LinearLayout>

            <!-- Volumen inicial -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/blue_text"
                    android:text="Volumen inicial"
                    android:textSize="16sp" />

                <SeekBar
                    android:id="@+id/seekbar_initial_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />
            </LinearLayout>

            <!-- Guardar posición de reproducción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/blue_text"
                    android:text="Guardar posición de reproducción"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_save_playback_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Tiempo de crossfade -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/blue_text"
                    android:text="Tiempo de crossfade (ms)"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edittext_crossfade_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="2000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
